<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Meal Image -->
        <ImageView
            android:id="@+id/mealImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="Meal Image" />

        <!-- Meal Title -->
        <TextView
            android:id="@+id/mealTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Meal Title" />

        <!-- Nutrition Info -->
        <TextView
            android:id="@+id/mealCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/mealProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/mealFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/mealCarbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555" />

        <!-- Ready Time and Likes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/mealTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ready in: "
                android:textColor="#555555" />

            <TextView
                android:id="@+id/mealLikes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Likes: "
                android:textColor="#555555"
                android:gravity="end" />
        </LinearLayout>

        <!-- Summary Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/mealSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary goes here"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <!-- Ingredients Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/mealIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients will appear here"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <!-- Instructions Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/mealInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions will appear here"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

    </LinearLayout>
</ScrollView>
